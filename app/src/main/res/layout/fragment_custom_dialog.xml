<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/card_cod_gray_background">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="UPDATE YOUR INFORMATION"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <NumberPicker
                android:theme="@style/NumberPickerTextColorStyle"
                android:id="@+id/itemHeight"
                android:inputType="number"
                android:maxLength="3"
                android:maxHeight="220dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:hint="Height" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="cm"
                android:textColor="@color/white" />

            <NumberPicker
                android:id="@+id/itemWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif"
                android:hint="Weight"
                android:inputType="number"
                android:maxLength="3"
                android:theme="@style/NumberPickerTextColorStyle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="kg"
                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/cod_gray"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textSize="11dp"
                app:backgroundTint="@color/white"
                app:backgroundTintMode="multiply" />

            <Button
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:text="Save"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="@color/green_malachite"
                android:background="@color/cod_gray"
                app:backgroundTint="@color/white"
                app:backgroundTintMode="multiply" />
        </LinearLayout>
</LinearLayout>